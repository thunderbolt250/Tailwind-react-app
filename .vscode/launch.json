    "version": "0.2.0",
    "configurations": [
        {
            "type": "browse-lite",
            "request": "launch",
            "name": "Browse Lite: Launch",
            "url": "http://localhost:3000"
        },
        {
            "type": "browse-lite",
            "request": "attach",
            "name": "Browse Lite: Attach"
        },
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/app.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }

        
       
    ]
}